<h1 class = "title">Edit</h1>

<%= form_with model: @user, class:"grid-container layout2", local: true do |f|%>
    <% if @user.errors.any? %>
        <p>
        <%= @user.errors.full_messages.join(',')%>
        </p>
    <%end%>

   <div>
        <%= f.label :name %>
        <%= f.text_field :name, class:"layout2" %>
    </div>

    <div>
        <%= f.label :email %>
        <%= f.email_field :email, class:"layout2" %>
    </div>

       <%= f.submit "Save Change", :class => "button2"%>
<%end%>
       <%= link_to "Change Password", edit_user_password_path(@user.id), style: "margin: 1em;" %>